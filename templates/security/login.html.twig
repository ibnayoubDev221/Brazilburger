{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

{% block menu %}{% endblock %}

<form method="post">
<div class="page-login">
<div class="login-user container w-50 ">
    <div class="sous-login-user">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
        {% endif %}

     <h1 class="login-titre"><i class="fa fa-user-circle"></i>Login</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus><br/>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required><br/>

     <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button id="btn-login" class="mb-3  btn btn-lg " type="submit">
        Sign in
    </button>
        <div class="li-inscrire mr-5">
     <a id="lien-inscrire"class="" href="/register">S'inscrire</a>
    </div>
    </div>    
    </div>
</div>
</form>
{% endblock %}
    {% block footer %}
  
        {% endblock %}
